<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:background="@drawable/food_horizontal_item_backgroud"
    android:orientation="vertical">
    <!--食品展示图-->
    <ImageView
        android:id="@+id/food_horizontal_item_img"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
    <!--食品单项标题-->
    <TextView
        android:id="@+id/food_horizontal_item_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="1dp"
        android:ellipsize="end"
        android:maxEms="6"
        android:maxLines="1"
        android:textColor="#000000" />
    <!--销售量-->
    <TextView
        android:id="@+id/food_horizontal_item_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="1dp"
        android:textColor="#424c50"
        android:textSize="10dp" />
    <!--价格组-->
    <LinearLayout
        android:id="@+id/food_price_item"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginLeft="1dp"
        android:orientation="horizontal">
        <!--现价-->
        <TextView
            android:id="@+id/food_present_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CC3333" />
        <!--原价-->
        <TextView
            android:id="@+id/food_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#424c50"
            android:textSize="10dp" />
        <!--添加按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/food_horizontal_item_sub"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/food_store_item_sub2"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/food_horizontal_item_number"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:textColor="#000000"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/food_horizontal_item_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="2dp"
                android:adjustViewBounds="true"
                android:background="@drawable/food_item_add"
                android:scaleType="fitXY" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>