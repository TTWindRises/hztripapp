<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baidu.myapp.activity.FoodStoreActivity">
<com.baidu.myapp.util.StickyScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--商家头像背景图片-->

        <!--布局头部-->
        <RelativeLayout
            android:id="@+id/food_store_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/food_store_head_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
            <!--返回键-->
            <ImageView
                android:id="@+id/food_store_back_img"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <!--商家头像-->
            <ImageView
                android:id="@+id/food_store_head_img"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:adjustViewBounds="true" />
            <!--点赞-->
            <ImageView
                android:id="@+id/food_store_prise"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="86dp" />
        </RelativeLayout>

        <!--商家名称-->
        <TextView
            android:id="@+id/food_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:scaleType="fitXY">

            <TextView
                android:id="@+id/food_store_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696969"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/food_store_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D3D3D3"
                android:textSize="6dp" />
            <!--店铺的总销售量-->
            <TextView
                android:id="@+id/food_store_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696969"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/food_store_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D3D3D3"
                android:textSize="6dp" />

            <TextView
                android:id="@+id/food_store_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696969"
                android:textSize="10dp" />
        </LinearLayout>
        <!--优惠券-->
        <LinearLayout
            android:id="@+id/food_store_Coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#ef7a82"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food_store_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:ems="3"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/food_store_coupon_full"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:ems="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10dp"

                />

            <TextView
                android:id="@+id/food_store_coupon_get"
                android:layout_width="35dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:ems="3"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />
        </LinearLayout>
        <!--公告-->

        <TextView
            android:id="@+id/food_store_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="24"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="10dp" />

        <LinearLayout
            android:id="@+id/food_store_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />
                <!--轮播图-->
                <ImageView
                    android:id="@+id/food_store_shuffling"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:background="@drawable/food_horizontal_item_backgroud"
                    android:scaleType="fitXY" />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--商家推荐-->
            <TextView
                android:id="@+id/food_store_recommend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"

                android:textSize="18dp" />
            <!--横向食品展示栏-->
            <com.baidu.myapp.view.HorizontalRecycleView
                android:id="@+id/food_horizontal_list"
                android:layout_width="match_parent"
                android:layout_height="160dp"></com.baidu.myapp.view.HorizontalRecycleView>
        </LinearLayout>

        <!--纵向食品展示栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
           
            <!-- 左边文字分类栏-->
            <LinearLayout
                android:id="@+id/food_store_vertical_left"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/food_store_left_catrgory_bg"
                android:orientation="vertical"

                >

                <com.baidu.myapp.view.HorizontalRecycleView
                    android:id="@+id/food_vertical_left_category_list"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                </com.baidu.myapp.view.HorizontalRecycleView>
            </LinearLayout>
            <!--右边食品纵向展示栏-->
            <LinearLayout
                android:id="@+id/food_store_vertical_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.baidu.myapp.view.HorizontalRecycleView
                    android:id="@+id/food_store_vertical_right_list"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"></com.baidu.myapp.view.HorizontalRecycleView>

            </LinearLayout>

        </LinearLayout>
        <!--占位 防止最后的item滑不出底部的结算栏-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp" />



        </LinearLayout>
        <!--scollerView只能包含一个子控件-->



</com.baidu.myapp.util.StickyScrollView>

    <!--底部结算栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#585452"
        android:alpha="0.9"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="未选购商品"
            android:gravity="center"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:background="#68676b"
            android:text="结算"
            android:layout_marginRight="8dp"

            android:gravity="center"
            android:textSize="15dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/food_store_bottom_icon"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        />
    <TextView
        android:id="@+id/food_store_bottom_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"
        android:background="#fd2222"
        android:gravity="center"
        android:text="10"
        android:textSize="8dp"

        android:layout_marginBottom="60dp"
        />
</RelativeLayout>