<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/food_main"
    android:padding="10dp"
    >
    <!--食品的展示图片-->
    <ImageView
        android:id="@+id/food_main_img"
        android:layout_width="86dp"
        android:layout_height="83dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginLeft="12dp"
        android:adjustViewBounds="true"
        />
    <!--描述栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        >
        <!--食品的名称-->
        <TextView
            android:id="@+id/food_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >
            <!--纵向单个商品的月售-->
            <TextView
                android:id="@+id/food_main_sale"
                android:textSize="12dp"
                style="@style/tv_price"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--好评率-->
            <TextView
                android:id="@+id/food_main_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="#424c50"
                android:textSize="9dp"
                />
        </LinearLayout>
        <!--折扣-->
        <TextView
            android:id="@+id/food_main_discount"
            android:layout_width="28dp"
            android:layout_height="14dp"
            android:layout_marginTop="4dp"
            android:textSize="9dp"
            android:text="火爆"
            android:textColor="#ef7a82"
            android:gravity="center"
            android:background="@drawable/discount"
            />
        <TextView
            android:id="@+id/food_main_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424c50"
            android:layout_marginTop="4dp"
            android:textSize="9dp"
            />

    </LinearLayout>
</LinearLayout>