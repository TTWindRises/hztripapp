<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <ImageView
        android:id="@+id/food_store_head_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/food_store_back_img"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/food_store_head_img"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:adjustViewBounds="true"
        />


    <ImageView
        android:id="@+id/food_store_prise"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="85dp"
        />

    <TextView
        android:id="@+id/food_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:textSize="22dp"
        android:textColor="#000000"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:scaleType="fitXY"
    android:adjustViewBounds="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginTop="155dp"

    >
    <TextView
        android:id="@+id/food_store_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#696969"
        android:textSize="10dp"
        />
    <TextView
        android:id="@+id/food_store_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D3D3D3"
        android:textSize="6dp"
        />
    <TextView
        android:id="@+id/food_store_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#696969"
        android:textSize="10dp"
        />
    <TextView
        android:id="@+id/food_store_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D3D3D3"
        android:textSize="6dp"
        />
    <TextView
        android:id="@+id/food_store_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#696969"
        />
</LinearLayout>
</RelativeLayout>