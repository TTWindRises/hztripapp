<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:id="@+id/food_store_shop_cart_main"
    android:clipChildren="false"
    android:layout_height="match_parent">

    <!--底部结算栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.98"
        android:background="#585452"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/food_store_bottom_sum"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未选购商品"
            android:textColor="#b8b8b8"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/food_store_bottom_origin_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/food_store_bottom_settlement"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_weight="2.5"
            android:background="#68676b"
            android:gravity="center"
            android:textColor="#b8b8b8"
            android:text="结算"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/food_store_bottom_icon"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp" />

    <TextView
        android:id="@+id/food_store_bottom_number"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="75dp"
        android:background="@drawable/food_red_ball"
        android:gravity="center"
        android:text="10"
        android:textSize="8dp"

        android:visibility="invisible" />
</RelativeLayout>