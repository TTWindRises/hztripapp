<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--食品展示图-->
    <ImageView
        android:id="@+id/food_horizontal_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fd2324" />
    <!--食品单项标题-->
    <TextView
        android:id="@+id/food_horizontal_item_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="清蒸鱼"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        />
    <!--销售量-->
    <TextView
        android:id="@+id/food_horizontal_item_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#cccccc"
        android:text="月销256"
        android:layout_marginTop="2dp"
        android:textSize="10dp"
        />
    <!--价格组-->
    <LinearLayout
        android:id="@+id/food_price_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!--现价-->
        <TextView
            android:id="@+id/food_present_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
         <!--原价-->
        <TextView
            android:id="@+id/food_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--添加按钮-->
        <ImageView
            android:id="@+id/food_horizontal_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#dddd"
            />
    </LinearLayout>


</LinearLayout>